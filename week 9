import java.lang.*;
import java.util.*;
public class week9
{
public static void main(String args[])
{
try{
Scanner a = new Scanner(System.in);
System.out.println("enter the size of array");
int n = a.nextInt();
int arr[]= new int[n];
if(n>0)
{
System.out.println("the number is: "+n);
}
}
catch(NegativeArraySizeException e)
{
System.out.println(e);
}
}
}

